    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        // Show a confirmation dialog before exiting
        int confirm = JOptionPane.showConfirmDialog(this,
            "Are you sure you want to exit?", "Exit Confirmation",
            JOptionPane.YES_NO_OPTION);

        // If the user clicks "Yes", exit the application
        if (confirm == JOptionPane.YES_OPTION) {
            System.exit(0);
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:                                        
    // Get input values from text fields
    String id = jTextField1.getText().trim();
    String name = jTextField2.getText().trim();
    String gender = jRadioButton1.isSelected() ? "Male" : jRadioButton2.isSelected() ? "Female" : "";
    String address = jTextField3.getText().trim();
    String contact = jTextField4.getText().trim();
    
    // Validate inputs
    if (id.isEmpty() || name.isEmpty() || gender.isEmpty() || address.isEmpty() || contact.isEmpty()) {
        JOptionPane.showMessageDialog(this, "Please fill in all fields", "Input Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
    
    // Get table model and check if it exists
    DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
    if (model == null) {
        JOptionPane.showMessageDialog(this, "Error: Table model not found!", "Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
  
    // Add data to the table
    model.addRow(new Object[]{id, name, gender, address, contact});
    
    // Disable editing in the table
    jTable1.setDefaultEditor(Object.class, null);
    
    // Clear input fields for next entry
    jTextField1.setText(""); // Clears the ID text field
    jTextField2.setText(""); // Clears the Name text field
    jTextField3.setText(""); // Clears the Address text field
    jTextField4.setText(""); // Clears the Contact text field

    // Properly clear radio button selection
    buttonGroup1.clearSelection();
    
    // Show success message after registration
    JOptionPane.showMessageDialog(this, "Registration Successful!", "Success", JOptionPane.INFORMATION_MESSAGE);



    }
     private void insertIntoDatabase(String id, String name, String gender, String address, String contact) {
        try (Connection conn = DriverManager.getConnection(DB_URL, DB_USER, DB_PASSWORD)) {
            // Prepare SQL query to insert the data into the table
            String sql = "INSERT INTO registrations (id, name, gender, address, contact) VALUES (?, ?, ?, ?, ?)";
            try (PreparedStatement pstmt = conn.prepareStatement(sql)) {
                // Set parameters
                pstmt.setString(1, id);
                pstmt.setString(2, name);
                pstmt.setString(3, gender);
                pstmt.setString(4, address);
                pstmt.setString(5, contact);

                // Execute the query
                pstmt.executeUpdate();
            }
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Error inserting data into database: " + e.getMessage(), "Database Error", JOptionPane.ERROR_MESSAGE);
        }
    }

