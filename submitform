    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
    // Get input values from text fields and radio buttons
      String name = jTextField1.getText().trim();
    String mobile = jTextField2.getText().trim();
    String gender = jRadioButton1.isSelected() ? "Male" : jRadioButton2.isSelected() ? "Female" : "";
    String address = jTextField3.getText().trim();
     String dob = jTextField3.getText().trim();
     // In your constructor or initComponents()
String[] columnNames = {"Name", "Mobile", "Gender", "DOB", "Address"};
DefaultTableModel tableModel = new DefaultTableModel(columnNames, 0); // 0 rows initially
jTable1.setModel(tableModel);
    
    // Validate inputs
    if (((name.isEmpty() || mobile.isEmpty()) || gender.isEmpty()) || address.isEmpty()) {
        JOptionPane.showMessageDialog(this, "Please fill in all fields", "Input Error", JOptionPane.ERROR_MESSAGE);
        return;
    } else {
    }
    
     // Get the table model and add a new row with the values
    DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
    model.addRow(new Object[]{name, mobile, gender, dob, address});

    // Show a confirmation message with the entered details
    String message = "Submition was Successful!\n"
                   + "Name: " + name + "\n"
                   + "Mobile: " + mobile + "\n"
                   + "Gender: " + gender + "\n"
                   + "Date of Birth: " + dob + "\n"
                   + "Address: " + address;
    
    JOptionPane.showMessageDialog(this, message, "Confirmation", JOptionPane.INFORMATION_MESSAGE);

    // Clear input fields after submission
    jTextField1.setText(""); // Clears the Name text field
    jTextField2.setText(""); // Clears the Mobile text field
    jTextField3.setText(""); // Clears the DOB text field
    
    // Clear the radio button selection
    buttonGroup1.clearSelection();
    jDateChooser1.setDate(null); // Clear the selected date

    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
       
    // Clear the text fields
    jTextField1.setText(""); // Clears the Name text field
    jTextField2.setText(""); // Clears the Mobile text field
    jTextField3.setText(""); // Clears the Address text field
    
    // Reset the radio button selection (clear gender selection)
    buttonGroup1.clearSelection(); 
    
    // Reset the date chooser (clear date of birth)
    jDateChooser1.setDate(null); 

    // Uncheck the checkbox
    jCheckBox1.setSelected(false); 


    }                                        

public static void main(String[] args) {
        // Create a JFrame to hold the Registration Panel
         JFrame frame = new JFrame("Registration Form");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(600, 500); // Set the size of the window
        frame.add(new Regestrationpanel()); // Add the Registration panel to the frame
        frame.setLocationRelativeTo(null); // Center the window on the screen
        frame.setVisible(true); // Make the frame visible
        
    }


